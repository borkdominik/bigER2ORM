{
  "name": "bigorm",
  "displayName": "bigORM Modeling Tool",
  "description": "ORM modeling for various platforms",
	"publisher": "BIGModelingTools",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "icon": "./media/logo.png",
	"categories": [
		"Programming Languages",
		"Visualization",
		"Education"
	],
  "keywords": [
		"Object Relational Mapping",
		"ORM Diagram",
		"Modeling Tool",
		"Data Modeling",
		"Language Server",
    "SQLAlchemy",
    "Hibernate",
    "Entity Framework"
	],
  "repository": {
		"type": "git",
		"url": "https://github.com/borkdominik/bigER2ORM"
	},
  "files": [
    "dist",
    "extension",
    "server",
    "syntaxes",
    "webview",
    "media"
  ],
  "main": "./pack/main",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Language Client config",
      "properties": {
        "ormLanguageClient.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "bigorm",
        "aliases": [
          "bigORM Language",
          "orm"
        ],
        "extensions": [
          ".orm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bigorm",
        "scopeName": "source.orm",
        "path": "./syntaxes/bigorm.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "bigorm.diagram.open",
        "title": "Open in Diagram",
        "icon": "$(symbol-structure)",
        "category": "bigORM Diagram"
      },
      {
        "command": "bigorm.diagram.fit",
        "title": "Fit to Screen",
        "category": "bigORM Diagram"
      },
      {
        "command": "bigorm.diagram.center",
        "title": "Center selection",
        "category": "bigORM Diagram"
      },
      {
        "command": "bigorm.diagram.delete",
        "title": "Delete selected element",
        "category": "bigORM Diagram"
      },
      {
        "command": "bigorm.diagram.export",
        "title": "Export diagram to SVG",
        "category": "bigORM Diagram"
      },
      {
        "command": "bigorm.model.generateCode",
        "title": "Generate Code from Model"
      },
      {
        "command": "bigorm.model.reverseToModel",
        "title": "Reverse file to model"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "bigorm.diagram.open",
          "when": "editorLangId == 'bigorm'"
        },
        {
          "command": "bigorm.diagram.fit",
          "when": "bigorm-diagram-focused"
        },
        {
          "command": "bigorm.diagram.center",
          "when": "bigorm-diagram-focused"
        },
        {
          "command": "bigorm.diagram.delete",
          "when": "bigorm-diagram-focused"
        },
        {
          "command": "bigorm.diagram.export",
          "when": "bigorm-diagram-focused"
        }
      ],
      "editor/title": [
        {
          "command": "bigorm.diagram.open",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        },
        {
          "command": "bigorm.model.generateCode",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        },
        {
          "command": "bigorm.model.reverseToModel",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "bigorm.diagram.open",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        },
        {
          "command": "bigorm.model.generateCode",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "bigorm.diagram.open",
          "when": "resourceExtname == '.orm'",
          "group": "navigation"
        },
        {
          "command": "bigorm.model.generateCode",
          "when": "resourceExtname == '.orm'",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "key": "alt+f",
        "mac": "alt+f",
        "command": "orm.diagram.fit",
        "when": "orm-diagram-focused"
      },
      {
        "key": "alt+c",
        "mac": "alt+c",
        "command": "orm.diagram.center",
        "when": "orm-diagram-focused"
      },
      {
        "key": "alt+e",
        "mac": "alt+e",
        "command": "orm.diagram.export",
        "when": "orm-diagram-focused"
      },
      {
        "key": "delete",
        "mac": "delete",
        "command": "orm.diagram.delete",
        "when": "orm-diagram-focused"
      }
    ]
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build && yarn run lint",
    "build": "webpack --mode=development",
    "clean": "rimraf out",
    "lint": "eslint \"./src/**\"",
    "package": "vsce package --yarn",
    "watch": "webpack --mode=development --watch"
  },
	"dependencies": {
		"@vscode/webview-ui-toolkit": "^1.4.0",
    "@vscode/codicons": "^0.0.36",
		"sprotty-vscode": "^1.0.0",
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/node": "^20.14.9",
		"@types/vscode": "1.90.0",
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
    "@vscode/vsce": "^2.29.0",
		"eslint": "^9.6.0",
		"rimraf": "^5.0.7",
		"source-map-loader": "^5.0.0",
		"ts-loader": "^9.5.1",
		"typescript": "~5.5.3",
		"webpack": "^5.92.1",
		"webpack-cli": "^5.1.4"
	}
}