{
  "name": "bigorm",
  "displayName": "",
  "description": "ORM modeling for various platforms",
  "ormLanguageClient.trace.server": "verbose",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:bigorm"
  ],
  "main": "./dist/main.js",
  "contributes": {
    "configuration": {
			"type": "object",
			"title": "Language Client config",
			"properties": {
				"ormLanguageClient.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
    "languages": [
      {
        "id": "bigorm",
        "aliases": [
          "bigORM Language",
          "orm"
        ],
        "extensions": [
          ".orm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bigorm",
        "scopeName": "source.orm",
        "path": "./syntaxes/bigorm.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "bigorm.model.generateCode",
        "title": "Generate Code from Model"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "bigorm.model.generateCode",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "bigorm.model.generateCode",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "bigorm.model.generateCode",
          "when": "resourceExtname == '.orm'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "sprotty-vscode": "^0.3.1",
    "vscode-languageclient": "^7.0.0"
  }
}