{
  "name": "bigorm",
  "displayName": "",
  "description": "ORM modeling for various platforms",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:bigorm",
    "onCommand:bigorm.diagram.open"
  ],
  "files": [
		"dist",
		"extension",
    "pack",
		"server",
		"syntaxes",
		"webview",
		"media"
	],
  "main": "./dist/main.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Language Client config",
      "properties": {
        "ormLanguageClient.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "bigorm",
        "aliases": [
          "bigORM Language",
          "orm"
        ],
        "extensions": [
          ".orm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "bigorm",
        "scopeName": "source.orm",
        "path": "./syntaxes/bigorm.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "bigorm.diagram.open",
        "title": "Open in Diagram",
        "icon": "$(symbol-structure)",
        "category": "bigORM Diagram"
      },
      {
        "command": "bigorm.diagram.fit",
        "title": "Fit to Screen",
        "category": "bigORM Diagram"
      },
      {
        "command": "bigorm.diagram.center",
        "title": "Center selection",
        "category": "bigORM Diagram"
      },
      {
        "command": "bigorm.diagram.delete",
        "title": "Delete selected element",
        "category": "bigORM Diagram"
      },
      {
        "command": "bigorm.diagram.export",
        "title": "Export diagram to SVG",
        "category": "bigORM Diagram"
      },
      {
        "command": "bigorm.model.generateCode",
        "title": "Generate Code from Model"
      },
      {
        "command": "bigorm.model.reverseToModel",
        "title": "Reverse file to model"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "bigorm.diagram.open",
          "when": "editorLangId == 'bigorm'"
        },
        {
          "command": "bigorm.diagram.fit",
          "when": "bigorm-diagram-focused"
        },
        {
          "command": "bigorm.diagram.center",
          "when": "bigorm-diagram-focused"
        },
        {
          "command": "bigorm.diagram.delete",
          "when": "bigorm-diagram-focused"
        },
        {
          "command": "bigorm.diagram.export",
          "when": "bigorm-diagram-focused"
        }
      ],
      "editor/title": [
        {
          "command": "bigorm.diagram.open",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        },
        {
          "command": "bigorm.model.generateCode",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        },
        {
          "command": "bigorm.model.reverseToModel",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "bigorm.diagram.open",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        },
        {
          "command": "bigorm.model.generateCode",
          "when": "editorLangId == 'bigorm'",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "bigorm.diagram.open",
          "when": "resourceExtname == '.orm'",
          "group": "navigation"
        },
        {
          "command": "bigorm.model.generateCode",
          "when": "resourceExtname == '.orm'",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "key": "alt+f",
        "mac": "alt+f",
        "command": "orm.diagram.fit",
        "when": "orm-diagram-focused"
      },
      {
        "key": "alt+c",
        "mac": "alt+c",
        "command": "orm.diagram.center",
        "when": "orm-diagram-focused"
      },
      {
        "key": "alt+e",
        "mac": "alt+e",
        "command": "orm.diagram.export",
        "when": "orm-diagram-focused"
      },
      {
        "key": "delete",
        "mac": "delete",
        "command": "orm.diagram.delete",
        "when": "orm-diagram-focused"
      }
    ]
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build && yarn run lint",
    "build": "webpack --mode=development",
    "clean": "rimraf out",
    "lint": "eslint \"./src/**\"",
    "package": "vsce package --yarn",
    "watch": "webpack --mode=development --watch"
  },
  "dependencies": {
		"@vscode/webview-ui-toolkit": "^1.2.2",
		"sprotty-vscode": "^0.2.0",
		"sprotty-vscode-webview": "^0.2.0",
		"vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.18.0",
		"rimraf": "^3.0.2",
		"source-map-loader": "^3.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "~4.6.2",
		"vsce": "^2.14.0",
		"webpack": "^5.64.2",
		"webpack-cli": "^4.9.1"
  }
}